<% if post.liked_by?(current_user) %>
  <%= link_to post_likes_path(post), method: :delete, remote: true, class: "u-like" do %>
    <i class="fa-solid fa-heart u-c-red"></i>
    <span class="u-like-count"><%= post.likes_count %></span>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post, remote: true, class: "u-like" do %>
    <i class="fa-solid fa-heart"></i>
    <span class="u-like-count"><%= post.likes_count %></span>
  <% end %>
<% end %>