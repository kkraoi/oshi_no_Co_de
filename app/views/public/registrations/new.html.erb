<section class="u-sec">
  <div class="u-inner">
      <h1 class="u-title u-mb-50">サインアップ</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="u-vert-30">
          <div>
            <h2 class="u-title-2">Eメール</h2>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "u-field", placeholder: "例: example@mail.com" %>
          </div>

          <div>
            <h2 class="u-title-2">
              パスワード
              <% if @minimum_password_length %>
              <small>（<%= @minimum_password_length %> 文字以上）</small>
              <% end %>
            </h2>
            <%= f.password_field :password, autocomplete: "new-password", class: "u-field" %>
          </div>

          <div>
            <h2 class="u-title-2 ">パスワード確認</h2>
            <p class="u-mb-5">もう一度パスワードを入力してください。</p>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "u-field" %>
          </div>
        </div>

        <div class="u-btn-wrap u-mt-50">
          <%= f.submit "登録する", class: "u-btn opt-size-full" %>
        </div>
      <% end %>

      <div class="u-mt-50 u-ta-r">
        <p>
          ログインは
          <%= link_to "こちら", new_user_session_path, class: "u-link" %>
        </p>
      </div>
  </div>
</section>


