<% content_for :title, "グループ｜一覧" %>
<% content_for :head do %>
<% end %>
<% content_for :foot do %>
<% end %>
<% content_for :body_class, "" %>

<section class="u-sec">
  <div class="u-inner-1">
    <h1 class="u-title">グループ一覧</h1>

    <%= render 'shared/search_user', url: groups_path, placeholder: "グループ名を入力してください。" %>

    <div class="u-table">
      <table>
        <tbody>
          <%= render 'public/groups/index', groups: @groups %>
        </tbody>
      </table>
    </div>

    <% unless current_user.guest? %>
      <div class="u-btn-wrap u-mt-50">
        <%= link_to new_group_path, class: 'u-btn' do %>
          <i class="fa-solid fa-square-plus"></i> グループ作成
        <% end %>
      </div>
    <% end %>
  </div>
</section>