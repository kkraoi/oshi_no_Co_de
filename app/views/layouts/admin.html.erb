    <title>推しのコード（管理画面）<%= "｜#{content_for(:title)}" if content_for?(:title) %></title>
    <%= render 'layouts/common/meta' %>
    <%= yield(:head) %>
  </head>

  <body class="<%= content_for?(:body_class) ? yield(:body_class) : "" %>">
    <%= render 'layouts/common/header', menu_partial: 'layouts/admin/menu' %>
