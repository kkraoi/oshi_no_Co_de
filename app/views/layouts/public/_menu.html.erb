      <li>
        <%= link_to about_path, class: "u-inactive" do %>
          <i class="fa-solid fa-users"></i> 参加グループ
        <% end %>
      </li>
      <li>
        <%= link_to about_path, class: "u-inactive" do %>
          <i class="fa-solid fa-gear"></i> 設定
        <% end %>
      </li>
    </menu>
  </div>
  <% end %>
</div>

<% if user_signed_in? %>
<div class="header-nav-foot">
  <div class="u-btn-wrap">
    <%= link_to root_path, class: "u-btn u-inactive" do %>
      コード投稿
    <% end %>
  </div>
</div>
<% end %>