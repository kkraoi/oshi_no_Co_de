  </div>

  <% if user_signed_in? %>
  <div class="u-mt-30">
    <h2 class="u-title-2">ユーザー名</h2>
    <menu class="u-menu">
      <li>
        <%= link_to root_path, class: "u-inactive" do %>
          <i class="fa-solid fa-code"></i> あなたのコード一覧
        <% end %>
      </li>
      <li>
        <%= link_to about_path, class: "u-inactive" do %>
          <i class="fa-solid fa-handshake-simple"></i> フォロー/フォロワー
        <% end %>
