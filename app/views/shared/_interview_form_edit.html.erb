<%= form_with(url: url, method: :patch, local: true) do %>
  <div class="u-table">
    <table>
      <tbody>
        <% interviews.each do |interview| %>
          <tr>
            <td class="u-pY-30">
              <div>
                <%= text_area_tag "interviews[#{interview.id}][content]", interview.content, class: "u-field" %>
              </div>

              <div class="u-mt-10">
                <label class="u-checkbox">
                  <%= check_box_tag "interviews[#{interview.id}][_destroy]", "1" %>
                  この質問を削除する
                </label>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="u-btn-wrap u-mt-30">
    <%= submit_tag '確定', class: 'u-btn' %>
  </div>
<% end %>